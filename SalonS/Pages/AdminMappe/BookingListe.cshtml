@page
@model SalonS.Pages.AdminMappe.BookinglisteModel

<!DOCTYPE html>
<html>
<head>
    <title>Booking List</title>
</head>
<body>
    <h1 style="text-align: center;">Booking List</h1>

    <div style="overflow-x:auto;">
        <table style="width: 100%; border-collapse: collapse; margin: 20px 0;">
            <thead>
                <tr style="background-color: lightgray;">
                    <th style="padding: 8px; border: 1px solid #ddd;">Booking ID</th>
                    <th style="padding: 8px; border: 1px solid #ddd;">Dato</th>
                    <th style="padding: 8px; border: 1px solid #ddd;">Tid</th>
                    <th style="padding: 8px; border: 1px solid #ddd;">Klip</th>
                    <th style="padding: 8px; border: 1px solid #ddd;">Frisør</th>
                    <th style="padding: 8px; border: 1px solid #ddd;">KundeNavn</th>
                    <th style="padding: 8px; border: 1px solid #ddd;">KundeTLF</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var booking in Model.Bookings)
                {
                    <tr>
                        <td style="padding: 8px; border: 1px solid #ddd;">@booking.BookingId</td>
                        <td style="padding: 8px; border: 1px solid #ddd;">@booking.Dato.ToShortDateString()</td>
                        <td style="padding: 8px; border: 1px solid #ddd;">@booking.Tid</td>
                        <td style="padding: 8px; border: 1px solid #ddd;">@booking.Klip</td>
                        <td style="padding: 8px; border: 1px solid #ddd;">@booking.Frisør</td>
                        <td style="padding: 8px; border: 1px solid #ddd;">
                            @(Model.Kunder.FirstOrDefault(k => k?.Kundenummer == booking.Kunde?.Kundenummer)?.Navn ?? "N/A")
                        </td>
                        <td style="padding: 8px; border: 1px solid #ddd;">
                            @(Model.Kunder.FirstOrDefault(k => k?.Kundenummer == booking.Kunde?.Kundenummer)?.Tlf ?? "N/A")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
